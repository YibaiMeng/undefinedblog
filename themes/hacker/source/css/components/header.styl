$siteAColor = #ffffff
$siteABgColor = #0074D9
$siteDescColor = #9e9e9e

header
  line-height 1.8rem

  .site-branding
    text-align center
    margin-bottom 2rem
    font-family Menlo,Consolas,Monaco,Courier,Droid Sans Mono,monospace;
    letter-spacing 0.1em

    .site-title
      margin 0
      font-size 1.4rem

      a
        display inline-block
        color $siteAColor
        font-weight bolder
        background-color #999
        line-height 3rem
        height 3rem
        padding 0 1rem

    .site-description
      color $siteDescColor
      font-size 1.3rem
      margin 1rem 0 0

  .site-navigation
    text-align center

    ul
      list-style none
      padding 0
      margin 0
      font-size 1.6em

      &.dim
        li
          a
            opacity .5
            transition opacity .3s ease-out

      &.dim:hover
        li
          a
            opacity 1

      li
        display inline-block
        margin 0 0.5rem

        a
          display block
          color $siteABgColor
          font-size 1.6rem
          line-height 2rem
          padding 0 1rem

          &:hover
            color #004d90
